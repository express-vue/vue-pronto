    "version": "0.2.0",
    "configurations": [

        {
            "name": "Attach to Process",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "protocol": "inspector",
            "restart": true,
            "outFiles": ["${workspaceRoot}/lib"],
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "npm",
            "restart": true,
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "port": 9229
        }
    ]
}
